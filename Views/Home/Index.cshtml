<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel='stylesheet' type="text/css" href="css/styles.css">
    <title>Job Board</title>
  </head>
  <body>
    <div class="container">
      <h1>Here Are Some Job Openings You Probably Don't Qualify For</h1>
      <ul>
        @if (Model.Count == 0)
        {
          <h3>We Dont Have any jobs for you. Go Away!</h3>
        }
        else
        {
          @foreach (var job in Model)
          {
            <li><a href="/jobs/@job.GetId()">@job.GetTitle()</a></li>
          }
        }
      </ul>


      <a href="/new-Job">Add A New Job</a>
    </div>
  </body>
</html>
